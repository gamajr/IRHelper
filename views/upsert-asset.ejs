<%- include('./includes/head.ejs') %>
<header>
    <%- include('./includes/navbar.ejs') %>
</header>
<body>

    <div class="container m-2">
        <div class="row">
        <div class="col-md-4 col-md-offset-4"></div>
        <div class="col-md-4 col-md-offset-4">
            <h5>Adicionar Ativo</h5>    
        </div>        
        <div class="col-md-4 col-md-offset-4"></div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4"></div>
            <div class="col-md-4 col-md-offset-4">
                <form action="<% if (editing) { %>/edit-asset<% } else { %>/add-asset<% } %>" method="POST">
                    <div class="form-row">
                        <div class="col-4"><label for="publicName">Empresa</label></div>
                        <div class="col-12">
                            <input class="form-control" value="<% if (editing) { %><%= asset.publicName %><% } %>" type="text" id="publicName" name="publicName">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-4"><label for="entName">Raz√£o Social</label></div>
                        <div class="col-12">
                            <input class="form-control" value="<% if (editing) { %><%= asset.entName %><% } %>" type="text" id="entName" name="entName">
                        </div>
                    </div>                    
                    <div class="form-row">
                        <div class="col-4"><label for="cnpj">CNPJ</label></div>
                        <div class="col-12">
                            <input class="form-control" value="<% if (editing) { %><%= asset.cnpj %><% } %>" type="text" id="cnpj" name="cnpj">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-4"><label for="ticker">Ticker</label></div>
                        <div class="col-12">
                            <input class="form-control" value="<% if (editing) { %><%= asset.ticker %><% } %>" type="text" id="ticker" name="ticker">
                        </div>
                    </div>
                    <% if (editing) { %>
                        <input type="hidden" value="<%= asset._id %>"name="assetId">
                    <% } %>
                    <div class="btn-group">
                        <button class="btn btn-success form-control rounded mt-2 me-2" action="submit">Salvar</button>
                        <a href="/" class="form-control btn btn-danger rounded mt-2 me-2">Cancelar</a>
                                                 
                        
                    </div>                    
                </form>
            </div>    
            <div class="col-md-4 col-md-offset-4"></div>
        </div>  
        
    </div>    
<%- include('./includes/tail.ejs') %>